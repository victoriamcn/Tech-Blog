<div class="columns loginpage">
    <!--LOGIN FORM-->
    <div class="column login-form">
        <div class="header">
            <h2>Login Below</h2>
        </div>
        <form action="./login" method="POST" class="loginform">
            <!-- Username field -->
            <label class="input-group-addon username-login">Enter Username:</label>
            <input class="form-input username-login" type="text" id="username-login" />

            <label class="input-group-addon password-login">Enter Password:</label>
            <!-- Password field -->
            <input class="form-input password-input password-login" type="password" id="password-login" />
            <a href="/dashboard"><button class="btn btn-primary input-group-btn login-btn submit">Login</button></a>
            <!-- An element to toggle between password visibility -->
            <label class="form-switch">
                <input type="checkbox" onclick="passwordLoginFunction()">
                <i class="form-icon"></i> Show Password
            </label>
        </form>
    </div>
    <div class="divider-vert" data-content="OR"></div>
    <!--SIGN-UP LINK-->
    <div class="column">
        <div class="header">
            <h2>New here?</h2>
        </div>
        <a href="/signup">
            <button class="btn btn-primary input-group-btn sign-up-btn submit">Sign Up!</button>
        </a>
    </div>
</div>
<!--CONNECTING LOGIN.JS-->
<script src="./js/login.js"></script>
<!--CONNECTING PASSWORD.JS-->
<script src="../utils/password.js"></script>